{
  "name": "@fabriziojordan/home-app",
  "version": "0.0.2",
  "description": "Home App for Daily Linux Use",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "clean": "node ./src/scripts/clean.js",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=public/icons/home1024x1024.png --prune=true --out=release-builds",
    "build": "electron-builder"
  },
  "keywords": [
    "Home"
  ],
  "icon": "public/icons/home1024x.png",
  "author": {
    "name": "Fabricio Jord√°n",
    "email": "fabriziodevjordan@gmail.com",
    "url": "https://github.com/FabrizioJordan"
  },
  "repository": "https://github.com/FabrizioJordan/home-app.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "license": "ISC",
  "build": {
    "appId": "com.fabriziojordan.homeapp",
    "productName": "home-app",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "artifactName": "${productName}-${version}.${ext}",
      "executableName": "home-app",
      "category": "Productivity",
      "icon": "public/icons/home1024x.png",
      "target": ["deb", "AppImage"]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^30.0.3",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^3.4.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  }
}
